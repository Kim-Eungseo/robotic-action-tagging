[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    venv,
    .env
    
ignore = 
    E203,  # whitespace before ':'
    E266,  # too many leading '#' for block comment
    E501,  # line too long
    W503,  # line break before binary operator
    F403,  # 'from module import *' used
    F401   # imported but unused
    F841

per-file-ignores =
    __init__.py:F401

max-complexity = 10
